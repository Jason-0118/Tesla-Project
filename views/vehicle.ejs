<%- include('header.ejs', {title: title }) %>

    <h1 class="col-12 text-center">
        <%- title %>
    </h1>
    <div class="container">
        <div class="row">
            <% for(let i=0; i<list.length; i++) { %>
                <div class="col-md-6">
                    <div class="card mt-3">
                        <div class="vehicle align-items-center text-center">
                            <a href="<%-list[i].detail %>"><img src="<%-list[i].vehicle_summary.url_image %>"
                                    class="card-img-top"></a>
                            <h3 class="mt-3">
                                <a href="<%-list[i].detail %>">
                                    <%- list[i].whole %>
                                </a>
                            </h3>
                            <div class="mt-3 info">
                                <span class="text d-block">
                                    <%-list[i].vehicle_summary.type %>
                                </span>
                                <span class="text d-block">
                                    <%-list[i].vehicle_summary.mileage %>
                                </span>
                                <span class="text d-block">
                                    <%-titleArray[i] %>
                                </span>
                                <span class="text d-block">Detail</span>
                            </div>
                        </div>
                        <div class="p-3 text-center text-danger mt-2 cursor">
                            <span class="text-uppercase">Like</span>
                        </div>
                    </div>
                </div>

                <% } %>
        </div>
    </div>



    <%- include('footer.ejs') %>